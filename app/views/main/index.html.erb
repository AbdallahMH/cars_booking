<div style="box-sizing: border-box;  display: grid;  grid-column-gap: 1px;  grid-row-gap: 10px;  grid-template-columns: 0.2fr 0.2fr 0.2fr 0.2fr;">

  <% @cars.each do |car| %>
    <div class="card" style="width: 18rem; margin-top: 15px; margin-left: 15px; margin-right: 15px">
      <img src="<%= car.images[0] %>" class="card-img-top" alt="NO CAR IMAGE">
      <div class="card-body">
        <h5 class="card-title"> <%= car.car_name %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
          content.</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><i class="fas fa-tools"></i> <%= car.make %> </li>
        <li class="list-group-item"><i class="fas fa-car"></i> <%= car.model %> </li>
        <li class="list-group-item"><i class="fas fa-road"></i> <%= car.kilometers_traveled %> </li>

        <li class="list-group-item"><i class="fas fa-calendar-alt"></i> <%= car.avaliable_from.strftime("%d/%m/%Y") %> </li>
        <li class="list-group-item"><i class="fas fa-calendar-alt"></i> <%= car.avaliable_until.strftime("%d/%m/%Y") %> </li>

        <li class="list-group-item"><i class="fas fa-location-arrow"></i> <%= distance(car.latitude, car.longitude) %> KM </li>
      </ul>
      <div class="card-body">
        <%= link_to "Car Details", { controller: 'car', action: 'index', id: car.id }, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>